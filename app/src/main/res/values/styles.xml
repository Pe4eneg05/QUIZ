<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RadioButtonTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="QuestionTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:padding">25dp</item>
    </style>

    <style name="ResultTextView">
        <item name="android:background">@color/purple_200</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">FeedBack</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>